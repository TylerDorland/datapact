# DataPact Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=datapact
DATABASE_USER=datapact
DATABASE_PASSWORD=your_secure_password_here

# Async database URL (constructed from above, or override directly)
# DATABASE_URL=postgresql+asyncpg://datapact:password@localhost:5432/datapact

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# Service Configuration
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Contract Service
# =============================================================================
CONTRACT_SERVICE_HOST=0.0.0.0
CONTRACT_SERVICE_PORT=8001

# =============================================================================
# Validation Service
# =============================================================================
VALIDATION_SERVICE_HOST=0.0.0.0
VALIDATION_SERVICE_PORT=8002

# =============================================================================
# Notification Service
# =============================================================================
NOTIFICATION_SERVICE_HOST=0.0.0.0
NOTIFICATION_SERVICE_PORT=8003

# =============================================================================
# Email Configuration (for notifications)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@datapact.example.com

# =============================================================================
# Slack Integration (optional)
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# =============================================================================
# Authentication & Security
# =============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
